#!/usr/bin/env bash
# Install and configure HAproxy on your lb-01 server.

apt-get -y update
apt-get -y upgrade
apt-get -y install haproxy
echo "
frontend http
	bind *:80
	mode http
	default_backend web-backend
	backend web-backend

balance roundrobin
	server 3464-web-01 23.21.15.186 check
	server 3464-web-02 34.138.82.74 check" | sudo tee -a /etc/haproxy/haproxy.cfg > /dev/null
service haproxy restart
